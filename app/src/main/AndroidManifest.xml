<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoMovil"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProyectoMovil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CandidatesReviewPage"
            android:exported="false"
            android:label="@string/title_activity_candidates_review_page"
            android:theme="@style/Theme.ProyectoMovil" />

        <activity
            android:name=".FormPagePreview"
            android:exported="true"
            android:label="@string/title_activity_form_page"
            android:theme="@style/Theme.ProyectoMovil" />

        <activity
            android:name=".main_page"
            android:exported="false"
            android:label="@string/title_activity_main_page"
            android:theme="@style/Theme.ProyectoMovil" />
    </application>

</manifest>
